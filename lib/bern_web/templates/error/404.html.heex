<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport"
    content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0, shrink-to-fit=no" />
  <meta name="color-scheme" content="dark light" />
  <%= render(BernWeb.LayoutView, "_icons.html", assigns) %>
  <%= csrf_meta_tag() %>
  <SEO.juice
    conn={@conn}
    config={BernWeb.SEO}
    item={SEO.item(@conn)}
    page_title={assigns[:page_title]} />
  <link phx-track-static rel="stylesheet" href={Routes.static_path(@conn, "/assets/app.css" )} />
  <script defer phx-track-static type="text/javascript" src={Routes.static_path(@conn, "/assets/app.js" )}>
  </script>
  <script>
    if (localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
      document.documentElement.classList.add("dark")
      document.querySelector('meta[name="theme-color"]').setAttribute('content', 'rgb(17, 24, 39)')
    } else {
      document.documentElement.classList.remove("dark")
      document.querySelector('meta[name="theme-color"]').setAttribute('content', 'rgb(255, 255, 255)')
    }
  </script>
</head>

<body class="antialiased leading-tight bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
  <%= render(BernWeb.LayoutView, "nav.html", assigns) %>
  <div class="container max-w-7xl mt-6 mx-auto px-4 sm:px-6 lg:px-8">
    <main class="pb-6" role="main">
      <div class="container mt-6 mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-center">
          <div class="bg-brand-500 shadow animate-pulse text-white font-bold rounded-lg shadow-lg p-20">
            <img alt="404 Not found" src={Routes.static_path(@conn, "/images/404.jpg")} />
          </div>
        </div>
      </div>
    </main>
  </div>
  <%= render(BernWeb.LayoutView, "footer.html", assigns) %>
</body>

</html>
